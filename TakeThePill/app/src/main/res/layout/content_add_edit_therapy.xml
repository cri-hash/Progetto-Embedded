<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".AddEditTherapyActivity"
    tools:showIn="@layout/activity_add_edit_therapy">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/drug_name"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="25dp"
            android:text="@string/drug_name"
            android:textAlignment="center"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:background="@drawable/border"/>

        <Button
            android:id="@+id/edit_drug"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/drug_name"
            android:layout_marginEnd="37dp"
            android:background="@color/yellow"
            android:drawableBottom="@drawable/ic_edit_black_18dp"
            android:padding="7dp" />

        <TextView
            android:id="@+id/drug_quantity"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="98dp"
            android:text="@string/drug_quantity"
            android:textAlignment="center"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:background="@drawable/border"/>

        <EditText
            android:id="@+id/edit_quantity"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignEnd="@+id/edit_drug"
            android:layout_alignTop="@+id/drug_quantity"
            android:textColor="@color/black"
            android:backgroundTint="@color/black"
            android:textCursorDrawable="@color/black"/>

        <TextView
            android:id="@+id/drug_duration"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="171dp"
            android:text="@string/duration"
            android:textAlignment="center"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:background="@drawable/border"/>

        <Button
            android:id="@+id/edit_duration"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/drug_duration"
            android:layout_marginEnd="37dp"
            android:background="@color/yellow"
            android:drawableBottom="@drawable/ic_edit_black_18dp"
            android:padding="7dp" />

        <TextView
            android:id="@+id/drug_days"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="244dp"
            android:text="@string/days"
            android:textAlignment="center"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:background="@drawable/border"/>

        <Button
            android:id="@+id/edit_days"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/drug_days"
            android:layout_marginEnd="37dp"
            android:background="@color/yellow"
            android:drawableBottom="@drawable/ic_edit_black_18dp"
            android:padding="7dp" />

        <TextView
            android:id="@+id/drug_hour"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="317dp"
            android:text="@string/hour"
            android:textAlignment="center"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:background="@drawable/border"/>

        <Button
            android:id="@+id/edit_hour"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/drug_hour"
            android:layout_marginEnd="37dp"
            android:background="@color/yellow"
            android:drawableBottom="@drawable/ic_edit_black_18dp"
            android:padding="7dp" />

        <Button
            android:id="@+id/save_all"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="430dp"
            android:text="@string/save_all"
            android:textSize="20dp"
            android:layout_marginEnd="37dp"
            android:background="@color/colorPrimary"
            android:layout_centerHorizontal="true"/>

        <Button
            android:id="@+id/delete_all"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="480dp"
            android:text="@string/delete_all"
            android:textSize="20dp"
            android:layout_marginEnd="37dp"
            android:background="@color/red"
            android:layout_centerHorizontal="true"/>


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
